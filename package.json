{
    "name": "generate-robotstxt",
    "version": "4.0.3",
    "description": "Awesome generator robots.txt",
    "author": "itgalaxy <development@itgalaxy.company>",
    "contributors": [
        {
            "name": "Alexander Krasnoyarov",
            "email": "alexander.krasnoyarov@itgalaxy.company",
            "url": "https://vk.com/sterling_archer"
        }
    ],
    "repository": {
        "type": "https",
        "url": "https://github.com/itgalaxy/generate-robotstxt"
    },
    "keywords": [
        "robotstxt",
        "robots.txt",
        "generate",
        "robots-txt",
        "user-agent",
        "police"
    ],
    "bugs": {
        "url": "https://github.com/itgalaxy/generate-robotstxt/issues"
    },
    "main": "dist/index.js",
    "bin": "dist/cli.js",
    "files": [
        "dist"
    ],
    "license": "MIT",
    "dependencies": {
        "meow": "^3.3.0",
        "resolve-from": "^3.0.0",
        "ip-address": "^5.8.6",
        "is-absolute-url": "^2.1.0"
    },
    "devDependencies": {
        "ava": "^0.22.0",
        "babel-cli": "^6.22.0",
        "babel-core": "^6.4.0",
        "babel-preset-es2015": "^6.14.0",
        "babel-preset-stage-0": "^6.5.0",
        "babel-register": "^6.14.0",
        "npm-run-all": "^4.0.0",
        "npmpub": "^3.1.0",
        "eslint": "^4.1.1",
        "eslint-plugin-ava": "^4.2.1",
        "eslint-plugin-import": "^2.6.0",
        "eslint-plugin-itgalaxy": "^53.0.0",
        "eslint-plugin-jest": "^20.0.3",
        "eslint-plugin-jsx-a11y": "^6.0.0",
        "eslint-plugin-lodash": "^2.4.3",
        "eslint-plugin-node": "^5.1.0",
        "eslint-plugin-prettier": "^2.1.2",
        "eslint-plugin-promise": "^3.5.0",
        "eslint-plugin-react": "^7.1.0",
        "eslint-plugin-unicorn": "^2.1.2",
        "execa": "^0.8.0",
        "remark-cli": "^4.0.0",
        "remark-preset-lint-itgalaxy": "^7.0.1",
        "rimraf": "^2.5.2",
        "nyc": "^11.0.1",
        "tempfile": "^2.0.0",
        "path-exists": "^3.0.0",
        "husky": "^0.14.0",
        "lint-staged": "^4.0.0",
        "prettier": "^1.5.2"
    },
    "scripts": {
        "lint:eslint": "eslint . --ignore-path .gitignore",
        "lint:remark": "remark . -f --ignore-path .gitignore --quiet",
        "lint": "npm-run-all -l --parallel lint:*",
        "prettier": "eslint . --fix --ignore-path .gitignore",
        "pretest": "npm run lint",
        "ava": "nyc ava --verbose",
        "test": "npm run ava",
        "prebuild": "rimraf dist",
        "build": "babel src --out-dir dist --ignore /__tests__/",
        "prepublish": "npm run build",
        "release": "npmpub"
    },
    "ava": {
        "require": "babel-register",
        "concurrency": 5,
        "babel": "inherit"
    },
    "babel": {
        "presets": [
            "es2015",
            "stage-0"
        ]
    },
    "remarkConfig": {
        "plugins": [
            "remark-preset-lint-itgalaxy"
        ]
    },
    "eslintConfig": {
        "rules": {
            "node/no-unsupported-features": "off"
        },
        "extends": [
            "plugin:itgalaxy/ava",
            "plugin:itgalaxy/esnext",
            "plugin:itgalaxy/node"
        ],
        "root": true
    }
}
